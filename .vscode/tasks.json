{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "Development build on changes",
            "command": "npm",
            "args": [
                "run-script",
                "development"
            ]
        },
        {
            "taskName": "Single production build",
            "command": "npm",
            "args": [
                "run-script",
                "production"
            ]
        }
    ]
}