{
  "scripts": {
    "postinstall": "npm-run-all postinstall-content postinstall-typescript postinstall-uglify",
    "postinstall-content": "ts-node BuildContent/Entry.ts",
    "postinstall-typescript": "tsc -p .",
    "postinstall-uglify": "uglifyjs Build/Index.js --compress --mangle --mangle-props keep_quoted --ie8 --toplevel --output Build/Index.min.js",
    "develop": "npm install && npm-run-all --parallel develop-content develop-typescript develop-uglify develop-host",
    "develop-content": "nodemon -e ase,flp --watch Game` --exec \"npm run-script postinstall-content\"",
    "develop-typescript": "tsc -w -p .",
    "develop-uglify": "nodemon --watch Build/Index.js --exec \"npm run-script postinstall-uglify\"",
    "develop-host": "mkdirp Build && cd Build && http-static"
  },
  "devDependencies": {
    "@types/mkdirp": "^0.3.29",
    "@types/node": "^8.0.7",
    "cpr": "^2.2.0",
    "http-static": "0.0.8",
    "imagemin": "^5.3.1",
    "imagemin-pngcrush": "^5.1.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "pngjs": "^3.2.0",
    "rimraf": "^2.6.1",
    "ts-node": "^3.1.0",
    "typescript": "^2.4.1",
    "uglify-js": "^3.0.25"
  }
}